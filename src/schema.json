{
    "$id": "h...",
    "$schema": "https://json-schema.org/draft-07/schema",
    "definitions": {
        "lineMapping": {
            "properties": {
                "name": {
                    "description": "The alias of this line (e.g. OdorA, FinalValve)",
                    "type": "string"
                },
                "line": {
                    "description": "The digital line associated with this mapping",
                    "type": "integer"
                }
            }
        },
        "lineCommand": {
            "properties": {
                "lineName": {
                    "type": "string"
                },
                "state": {
                    "enum": [
                        "open",
                        "close"
                    ]
                }
            }
        },
        "cameraProperties": {
            "properties": {
                "imagingRate": {
                    "description": "The imaging rate in frames / s",
                    "type": "number"
                },
                "preEventBufferFrames": {
                    "description": "The number of frames pre-event to include in the event buffer",
                    "type": "integer"
                },
                "postEventBufferFrames": {
                    "description": "The number of frames post-event to include in the event buffer",
                    "type": "integer"
                }
            }
        },
        "stateDefinition": {
            "properties": {
                "name": {
                    "type": "string"
                },
                "transitionsTo": {
                    "type": "string"
                }
            }
        }
    },
    "properties": {
        "metadata": {
            "properties": {
                "animalId": {
                    "default": "",
                    "type": "string"
                },
                "loggingRootPath": {
                    "default": "",
                    "type": "string"
                }
            }
        },
        "lineMappings": {
            "items": {
                "$ref": "#/definitions/lineMapping"
            },
            "type": "array"
        },
        "cameraProperties": {
            "$ref": "#/definitions/cameraProperties"
        },
        "stateDefinitions": {
            "items": {
                "$ref": "#/definitions/stateDefinition"
            },
            "type": "array"
        }
    },
    "title": "DelphiSession",
    "type": "object"
}